@model IEnumerable<Laboration_3.Models.MemberDetails>

<h2>Select Members</h2>
<form asp-action="SelectMembers" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.search" placeholder="Search..." class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (ViewBag.msg != null)
{
    <div class="alert alert-info">@ViewBag.msg</div>
}

<p> 
    <a asp-action="Create" class="btn btn-success">Create New Member</a>
    <a asp-action="FilterView" class="btn btn-success">Filter Members</a>
</p>


<div class="mb-3">

    <!-- Sortering på namn -->
    <a asp-action="SelectMembers" 
       asp-route-search="@ViewBag.search"
       asp-route-sortField="FirstName" 
       asp-route-sortOrder="ASC" 
       class="btn btn-outline-primary">
        Name A → Ö
    </a>

    <a asp-action="SelectMembers" 
       asp-route-search="@ViewBag.search"
       asp-route-sortField="FirstName" 
       asp-route-sortOrder="DESC" 
       class="btn btn-outline-primary">
        Name Ö → A
    </a>

    <!-- Sortering på ålder -->
    <a asp-action="SelectMembers"
       asp-route-search="@ViewBag.search"
       asp-route-sortField="Age"
       asp-route-sortOrder="ASC"
       class="btn btn-outline-success">
        Age ↑
    </a>

    <a asp-action="SelectMembers"
       asp-route-search="@ViewBag.search"
       asp-route-sortField="Age"
       asp-route-sortOrder="DESC"
       class="btn btn-outline-success">
        Age ↓
    </a>

    <!-- Sortering på poäng -->
    <a asp-action="SelectMembers" 
       asp-route-search="@ViewBag.search"
       asp-route-sortField="Score" 
       asp-route-sortOrder="ASC" 
       class="btn btn-outline-success">
        Score ↑
    </a>

    <a asp-action="SelectMembers" 
       asp-route-search="@ViewBag.search"
       asp-route-sortField="Score" 
       asp-route-sortOrder="DESC" 
       class="btn btn-outline-success">
        Score ↓
    </a>

</div>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().MemberId)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().FirstName)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().LastName)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Email)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Phone)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Age)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Score)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Age</td>
                <td>@item.Score</td>

                <td>
                    @Html.ActionLink("Edit", "UpdateMember", new { id = item.MemberId },new{ @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberId },new { @class = "btn btn-danger btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.MemberId },new { @class = "btn btn-info btn-sm" })
                </td>

            </tr>
        }
    </tbody>
</table>
