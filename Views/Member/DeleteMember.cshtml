@model Laboration_3.Models.MemberDetails

<h2>Delete Member</h2>
<h4>Are you sure you want to delete this member?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Score</dt>
        <dd class="col-sm-10">@Model.Score</dd>
    </dl>

    <form asp-action="Deleted" method="post">
        <input type="hidden" asp-for="MemberId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="SelectMembers" class="btn btn-secondary">Cancel</a>
    </form>

</div>

@if (ViewBag.error != null)
{
    <div class="text-danger">@ViewBag.error</div>
}
