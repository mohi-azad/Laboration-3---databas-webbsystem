@model Laboration_3.Models.Tournament

@{
    ViewBag.Title = "Create Tournament";
}

<h2>Create Tournament</h2>

<!-- Visa eventuella felmeddelanden -->
@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="Sort" class="form-label">Tournament Type</label>
        <input asp-for="Sort" class="form-control" placeholder="e.g. 8-boll, 9-boll" />
        <span asp-validation-for="Sort" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="T_date" class="form-label">Date</label>
        <input asp-for="T_date" type="date" class="form-control" />
        <span asp-validation-for="T_date" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Start_time" class="form-label">Start Time</label>
        <input asp-for="Start_time" type="time" class="form-control" />
        <span asp-validation-for="Start_time" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Create Tournament</button>
    <a asp-action="SelectTournaments" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
