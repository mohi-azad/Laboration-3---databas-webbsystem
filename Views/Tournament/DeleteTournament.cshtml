@model Laboration_3.Models.Tournament

<h2>Delete Tournament</h2>

<p>Do you want to delete this tournament?</p>

<ul>
    <li><strong>Type:</strong> @Model.Sort</li>
    <li><strong>Date:</strong> @Model.T_date.ToString("yyyy-MM-dd")</li>
    <li><strong>Time:</strong> @Model.Start_time.ToString(@"hh\:mm")</li>
</ul>

<form asp-action="Deleted" method="post">
    <input type="hidden" name="TournamentId" value="@Model.TournamentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="SelectTournaments" class="btn btn-secondary">Cancel</a>
</form>

@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <p class="text-danger">@ViewBag.error</p>
}
